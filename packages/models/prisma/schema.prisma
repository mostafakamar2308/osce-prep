generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String @id
  name            String
  whatsapp_number String
  university      Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Case {
  id         String @id @default(uuid())
  title      String
  complaint  String
  difficulty Int
  category   Int
  speciality Int
  name       String
  age        Int
  gender     Int
  weight     Float
  height     Float

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
